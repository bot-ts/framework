{
  "name": "@ghom/bot.ts",
  "version": "v8.0.0-Capi",
  "author": "ghom",
  "description": "A Discord bot in TypeScript made with [bot.ts](https://ghom.gitbook.io/bot-ts/)",
  "main": "dist/index.js",
  "type": "module",
  "style": "options",
  "imports": {
    "#config": "./dist/config.js",
    "#types": "./dist/types.js",
    "#core/*": "./dist/core/*",
    "#tables/*": "./dist/tables/*",
    "#buttons/*": "./dist/buttons/*",
    "#all": "./dist/core/index.js"
  },
  "scripts": {
    "bot": "bunx @ghom/bot.ts-cli",
    "build": "rimraf dist && bunx rollup -c && bun run scripts/copy-keepers.js",
    "final": "rimraf node_modules && bun install --production && bun run build",
    "watch": "bun run build -w",
    "start": "bun run src/index.ts",
    "start.test": "bun run tests/index.test.js",
    "format": "bunx prettier --write src tests scripts",
    "lint": "bunx eslint src/**/*.ts --fix",
    "update": "bun run scripts/update-framework.js",
    "readme": "bun run build && bun run scripts/generate-readme.js",
    "test": "bun run lint && tsc --noEmit && bun run start.test"
  },
  "prettier": {
    "semi": false,
    "endOfLine": "crlf"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bot-ts/framework.git"
  },
  "bugs": {
    "url": "https://github.com/bot-ts/framework/issues"
  },
  "homepage": "https://github.com/bot-ts/framework#readme",
  "dependencies": {
    "@ghom/handler": "^3.1.0",
    "@ghom/logger": "^2.0.2",
    "@ghom/orm": "^1.8.6",
    "boxen": "=5.1.2",
    "dayjs": "^1.11.13",
    "discord-eval.ts": "^1.1.2",
    "discord.js": "^14.16.2",
    "dotenv": "^16.0.1",
    "figlet": "^1.8.0",
    "ghom-prettify": "^3.0.0",
    "knex": "^3.0.1",
    "node-cron": "^3.0.3",
    "prettier": "^3.2.5",
    "regex-parser": "^2.2.11",
    "simple-git": "^3.27.0",
    "sqlite3": "latest",
    "tims": "^2.1.0",
    "types-package-json": "^2.0.39",
    "yargs-parser": "^21.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@ghom/bot.ts-cli": "^8.3.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.7.6",
    "@types/node-cron": "^3.0.11",
    "@types/prettier": "^2.6.3",
    "@types/rollup": "^0.51.4",
    "@types/yargs-parser": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "discord-api-types": "^0.37.102",
    "eslint": "^9.12.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.31.0",
    "git-commit-info": "2.0.2",
    "fast-glob": "3.3.2",
    "rollup": "^4.24.4",
    "typescript": "^5.4.0-beta"
  },
  "optionalDependencies": {
    "@types/pg": "^8.11.10"
  },
  "engines": {
    "node": ">=22.x.x",
    "npm": ">=10.x.x",
    "yarn": ">=1.22.x"
  }
}